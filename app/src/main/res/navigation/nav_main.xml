<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.shahed.firebace.views.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.shahed.firebace.views.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="com.shahed.firebace.views.IntroFragment"
        android:label="IntroFragment">
        <action
            android:id="@+id/action_introFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_introFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_introFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addPlaceFragment"
        android:name="com.shahed.firebace.views.AddPlaceFragment"
        android:label="AddPlaceFragment">
        <action
            android:id="@+id/action_addPlaceFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.shahed.firebace.views.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_placesListFragment"
            app:destination="@id/placesListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addPlaceFragment"
            app:destination="@id/addPlaceFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/placeDetailsFragment"
        android:name="com.shahed.firebace.views.PlaceDetailsFragment"
        android:label="PlaceDetailsFragment">
        <action
            android:id="@+id/action_placeDetailsFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <argument
            android:name="place"
            app:argType="com.shahed.firebace.network.model.Event" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.shahed.firebace.views.MapFragment"
        android:label="MapFragment">
        <argument
            android:name="lat"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="lng"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/placesListFragment"
        android:name="com.shahed.firebace.views.PlacesListFragment"
        android:label="PlacesListFragment">
        <action
            android:id="@+id/action_placesListFragment_to_placeDetailsFragment"
            app:destination="@id/placeDetailsFragment" />
        <argument
            android:name="category"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.shahed.firebace.views.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.shahed.firebace.views.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_introFragment"
            app:destination="@id/introFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.shahed.firebace.views.HistoryFragment"
        android:label="HistoryFragment">
        <action
            android:id="@+id/action_historyFragment_to_placeDetailsFragment"
            app:destination="@id/placeDetailsFragment" />
    </fragment>
</navigation>